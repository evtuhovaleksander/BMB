<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="busormAnotaited.DriversEntity" table="drivers" schema="buspark">
        <id name="driverId">
            <column name="driver_id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="tinytext" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>